<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Books</h1>
  <%= link_to 'Request new book', new_book_path %>
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Author</th>
          <th>Genre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><li><%= book.name %></li></td>
            <td><%= book.author %></td>
            <td><%= book.genre %></td>
            <% if current_user %>
              <td><%= link_to 'Reserve this book', reserve_book_path(book), method: :post, remote: true %></td>
            <% end %>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

</div>


